- name: Clean mounts
  shell: "umount {{ sv_netinstall_mount_dir }}/{{ partition.name }}/"
  loop: "{{ sv_netinstall_partitions }}"
  loop_control:
    loop_var: partition

- name: Clean mount folders
  file:
    path: "{{ sv_netinstall_mount_dir }}"
    state: absent

- name: Clean kpartx
  command: "/usr/sbin/kpartx -vd {{ sv_netinstall_downloads_dir }}/{{ sv_netinstall_raspbian_lite_image }}"

- name: Remove firmware download folder
  file:
    path: "{{ sv_netinstall_rpi_firmware_files_dir }}"
    state: absent
